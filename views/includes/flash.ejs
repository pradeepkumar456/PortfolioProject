 
 <style>
    .success{
        /* color: #28a745; */
        color: #17a2b8;
    }
 </style>

 
 <% if(success && success.length) { %>
<div class="alert alert-success fade show alert-dismissible col-6 offset-3"  role="alert">
    <strong class="success"> <%= success %></strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
 <% } %>


 <% if(error && error.length) { %>
  <div class="alert alert-danger fade show alert-dismissible col-6 offset-3"  role="alert">
      <strong > <%= error %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
   <% } %>

 
  