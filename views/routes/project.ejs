<% layout("/layout/boilerplate") %> 
<style>
    body {
        background-color: #f8f9fa;
    }
    .project-section {
        padding: 80px 0;
    }
    .project-card {
        transition: 0.3s;
        border-radius: 10px;
        overflow: hidden;
    }
    .project-card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }
    .project-img {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }
    .btn-custom {
        background-color: #007bff;
        color: white;
        padding: 8px 15px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
    }
    .btn-custom:hover {
        background-color: #0056b3;
    }
</style>
<body>
    <section class="project-section text-center">
        <div class="container">
            <h2 class="mb-5 fw-bold">My Projects</h2>
            <div class="row">
                
                <!-- Project 1: Hotel Booking Website -->
                <div class="col-md-4 mb-4">
                    <div class="card project-card">
                        <img src="/images/Portfolio.png" alt="Hotel Booking Website" class="project-img">
                        <div class="card-body">
                            <h4 class="card-title">Portfolio  Website</h4>
                            <p class="card-text">A fully responsive portfolio  website using Node.js, Express, MongoDB, and Bootstrap.</p>
                            <a href="#" class="btn-custom">View Project</a>
                        </div>
                    </div>
                </div>
                <div class="col-1">

                </div>

                <!-- Project 2: Property Booking Website -->
                <div class="col-md-4 mb-4">
                    <div class="card project-card">
                        <img src="/images/Airbnb.png" alt="Property Booking Website" class="project-img">
                        <div class="card-body">
                            <h4 class="card-title">Property Booking Website</h4>
                            <p class="card-text">A dynamic platform to book and list properties built with Node.js, Express, MongoDB, and EJS.</p>
                            <a href="#" class="btn-custom">View Project</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</body>
