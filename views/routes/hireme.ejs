<!-- Contact Section -->
<section class="container my-5">
    <div class="card shadow-lg p-4">
        <div class="text-center">
            <h1 class="fw-bold text-primary">Connect with Me</h1>
            <p class="text-muted">I'm open to opportunities! Feel free to reach out.</p>
        </div>

        <hr>

        <!-- Contact Info -->
        <div class="row">
            <div class="col-md-6">
                <h3 class="text-dark">Contact Information</h3>
                <ul class="list-unstyled">
                    <li><strong>Email:</strong> <a href="adigangwar1@gmail.com"></a>adigangwar1@gmail.com</li>
                    <li><strong>Phone:</strong> +917452861837</li>
